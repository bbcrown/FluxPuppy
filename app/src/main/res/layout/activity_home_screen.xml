<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.nau.li_840a_interface.homeScreen"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="CO2 Flux"
        android:textSize="64sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:paddingVertical="@android:dimen/app_icon_size"
        app:srcCompat="@drawable/co2_fluxlogo2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.15"
        android:background = "@android:drawable/btn_default"
        android:text="Start New Data Set"
        android:onClick="goNewDataSet"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.15"
        android:background = "@android:drawable/btn_default"
        android:text="File Directory"
        android:onClick="goFileDirectory"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.1"
        android:text="Version 1.0"
        android:gravity="center"/>

</LinearLayout>
